def get_zodiac_sign(day, month):
    if (month == 3 and day >= 21) or (month == 4 and day <= 19):
        return "Aries"
    elif (month == 4 and day >= 20) or (month == 5 and day <= 20):
        return "Taurus"
    elif (month == 5 and day >= 21) or (month == 6 and day <= 20):
        return "Gemini"
    elif (month == 6 and day >= 21) or (month == 7 and day <= 22):
        return "Cancer"
    elif (month == 7 and day >= 23) or (month == 8 and day <= 22):
        return "Leo"
    elif (month == 8 and day >= 23) or (month == 9 and day <= 22):
        return "Virgo"
    elif (month == 9 and day >= 23) or (month == 10 and day <= 22):
        return "Libra"
    elif (month == 10 and day >= 23) or (month == 11 and day <= 21):
        return "Scorpio"
    elif (month == 11 and day >= 22) or (month == 12 and day <= 21):
        return "Sagittarius"
    elif (month == 12 and day >= 22) or (month == 1 and day <= 19):
        return "Capricorn"
    elif (month == 1 and day >= 20) or (month == 2 and day <= 18):
        return "Aquarius"
    else:
        return "Pisces"

def get_horoscope(sign):
    horoscopes = {
        "Aries": "Today is a great day to start new ventures.",
        "Taurus": "Patience will bring you rewards today.",
        "Gemini": "Communication is key — reach out to a friend.",
        "Cancer": "Focus on self-care and relaxation today.",
        "Leo": "Your creativity shines bright; express yourself!",
        "Virgo": "Details matter—stay organized and productive.",
        "Libra": "Seek balance and harmony in your relationships.",
        "Scorpio": "Trust your intuition; it won't lead you astray.",
        "Sagittarius": "Adventure awaits — be open to new experiences.",
        "Capricorn": "Hard work lays the foundation for success.",
        "Aquarius": "Embrace new ideas and innovative thinking.",
        "Pisces": "Follow your heart and creativity today."
    }
    return horoscopes.get(sign, "Have a wonderful day!")

def main():
    print("User: Namaste")
    print("Astro AI: Namaste")
    
    problem = input("Astro AI: Apko kya paresani hai? ")
    print(f"User: {problem}")
    
    print("Astro AI: Apni date of birth batayiye.")
    day = int(input("Day (1-31): "))
    month = int(input("Month (1-12): "))
    
    sign = get_zodiac_sign(day, month)
    print(f"Astro AI: Aapka zodiac sign hai: {sign}")
    
    horoscope = get_horoscope(sign)
    print(f"Astro AI: your horoscope is: {horoscope}")

    print("Astro AI: You will get the solution to this problem soon, thank you, Namaste")

if __name__ == "__main__":
    main()
